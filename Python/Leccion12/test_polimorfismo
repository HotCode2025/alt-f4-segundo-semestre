from Empleado import Empleado
from Gerente import Gerente

def imprimir_detalle(objeto):
    #print(objeto)#de manera indirecta llamamos al str de la clase Empleado o Gerente
    print(type(objeto)) #que tipo de dato es
    print(objeto.mostrar_detalle())

    if isinstance(objeto, Gerente):
        print(objeto.departamento)



empleado = Empleado('Ariel', 54000)
imprimir_detalle(empleado)

gerente = Gerente('Osvaldo', 68000, 'Sistemas')
imprimir_detalle(gerente)
